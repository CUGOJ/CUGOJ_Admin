@using Microsoft.AspNetCore.Identity
<AuthorizeView>
    <Authorized>
        <a href="Profile">Hello, @context.User.Identity?.Name!</a>
        <form method="post" action="Identity/Account/LogOut">
            <button type="submit" class="nav-link btn btn-link">退出登录</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Login">登录</a>
    </NotAuthorized>
</AuthorizeView>